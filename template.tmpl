<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>{{.Title}}</title>
  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { padding: 20px; }
    .post-content { margin-top: 20px; }
  </style>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">{{.Title}}</h2>
            <p class="card-text post-content">{{.Content}}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>

